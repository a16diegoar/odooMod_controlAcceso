<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<!-- Salas -->
	<record model="ir.ui.view" id="sala_form_view">
		<field name="name">sala.form</field>
		<field name="model">acceso.sala</field>
		<field name="arch" type="xml">
			<form string="Salas Form">
				<sheet>
					<group>
						<field name="name" />
						<field name="number" />
						<field name="descr" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="acceso_ver_salas">
		<field name="name">Salas</field>
		<field name="res_model">acceso.sala</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Crea una <i>Sala</i>
			</p>
		</field>
	</record>


	<!-- Grupos -->
	<record model="ir.ui.view" id="grupo_form_view">
		<field name="name">grupo.form</field>
		<field name="model">res.groups</field>
		<field name="arch" type="xml">
			<form string="Salas Form">
				<sheet>
					<group>
						<field name="name" />
						<field name="nusuarios" />
						<field name="users" />
						<field name="write_date" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="acceso_ver_grupos">
		<field name="name">Grupos</field>
		<field name="res_model">res.groups</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Crea un <i>Grupo de Acceso</i>
			</p>
		</field>
	</record>


	<!-- Reglas -->

	<!-- MenuItems -->
	<menuitem id="main_acceso_menu" name="Control de Acceso" />
	<menuitem id="grupos_menu" name="Grupos" parent="main_acceso_menu" action="acceso_ver_grupos" />
	<menuitem id="salas_menu" name="Salas" parent="main_acceso_menu" action="acceso_ver_salas" />
	
</odoo>